{
  "extends": "@repo/typescript-config/nextjs.json",
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "@/web/*": ["./src/*"],
      "@/be/*": ["../backend/src/*"],
      "@/api/*": ["../../packages/api/src/*"],
      "@/db/*": ["../../packages/db/src/*"]

    },
    "plugins": [
      {
        "name": "next"
      }
    ]
  },
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "next-env.d.ts",
    "next.config.ts",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}

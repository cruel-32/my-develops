{
  "name": "with-tailwind",
  "private": true,
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "lint": "turbo run lint",
    "check-types": "turbo run check-types",
    "format": "prettier --write \"**/*.{ts,tsx,md}\"",
    "start": "turbo run start --filter=web --filter=backend",
    "docker:build": "./scripts/docker-build.sh",
    "docker:build:dev": "./scripts/docker-build.sh development",
    "docker:build:prod": "./scripts/docker-build.sh production",
    "docker:up": "./scripts/docker-deploy.sh up",
    "docker:up:dev": "./scripts/docker-deploy.sh development up",
    "docker:up:prod": "./scripts/docker-deploy.sh production up",
    "docker:down": "./scripts/docker-deploy.sh down",
    "docker:down:dev": "./scripts/docker-deploy.sh development down",
    "docker:down:prod": "./scripts/docker-deploy.sh production down",
    "docker:logs": "./scripts/docker-deploy.sh logs",
    "docker:logs:dev": "./scripts/docker-deploy.sh development logs",
    "docker:logs:prod": "./scripts/docker-deploy.sh production logs",
    "docker:restart": "./scripts/docker-deploy.sh restart",
    "docker:restart:dev": "./scripts/docker-deploy.sh development restart",
    "docker:restart:prod": "./scripts/docker-deploy.sh production restart",
    "docker:status": "./scripts/docker-deploy.sh status",
    "docker:status:dev": "./scripts/docker-deploy.sh development status",
    "docker:status:prod": "./scripts/docker-deploy.sh production status",
    "setup": "./scripts/setup.sh"
  },
  "devDependencies": {
    "prettier": "^3.6.2",
    "prettier-plugin-tailwindcss": "^0.6.14",
    "turbo": "^2.5.8"
  },
  "packageManager": "pnpm@10.18.0",
  "engines": {
    "node": ">=18"
  }
}
